.home
    display: flex
    flex-direction: column
    align-items: center
    flex: 1 auto
    .titulo-home
        font-family: 'tarefa-bold'
        font-size: 26px
        margin-bottom: 0
    .subtitulo-home
        font-family: 'tarefa-semiBold'
        font-size: 17px
        color: #77899E
        margin-top: 0
    .grid
        display: flex
        flex-direction: column
        width: 33%
    .btn-icon
        position: fixed
        bottom: 20px
        right: 20px
        button
            cursor: pointer
            background-color: #1AD18F
            border: none
            color: #FFFFFF
            border-radius: 50%
            height: 77px
            width: 77px
            font-size: 28px
            display: flex
            justify-content: center
            align-items: center
            &:active
                background-color: #0ED984
            &:hover
                background-color: #0ED984